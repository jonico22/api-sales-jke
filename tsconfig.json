{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src", // ðŸ‘ˆ Volvemos a poner src para que el build sea limpio
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ], // ðŸ‘ˆ Solo compilamos lo que estÃ¡ en src
  "exclude": [
    "node_modules",
    "dist",
    "prisma"
  ] // ðŸ‘ˆ Excluimos prisma del build de la API
}