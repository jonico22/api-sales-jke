PORT=3000
NODE_ENV=development

# ------------------------------------------------------------------------------
# CONFIGURACIÃ“N DE POSTGRES (DOCKER)
# ------------------------------------------------------------------------------
DB_USER=admin_jke
DB_PASSWORD=secreto123
DB_NAME=mydatabase

# ------------------------------------------------------------------------------
# PRISMA (CONEXIÃ“N A LA BASE DE DATOS)
# Importante: En Docker, el host es 'db' (el nombre del servicio en el compose)
# En local (fuera de docker), el host serÃ­a 'localhost'
# ------------------------------------------------------------------------------
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}?schema=public"

# ------------------------------------------------------------------------------
# REDIS
# En Docker, el host es 'redis'
# ------------------------------------------------------------------------------
REDIS_URL="redis://redis:6379"

# ------------------------------------------------------------------------------
# CONFIGURACIÃ“N DOCKER (PARA EL UNIFICADO)
# Estos valores sobrescriben los defaults si se usan en el comando
# ------------------------------------------------------------------------------
BUILD_TARGET=development
START_COMMAND="npm run dev"
CORS_ORIGIN=*

# ------------------------------------------------------------------------------
# API EXTERNA (SALES API)
# En Docker, usar 'host.docker.internal' para acceder al host
# En local (fuera de docker), usar 'localhost'
# ------------------------------------------------------------------------------
API_SALES_URL=http://host.docker.internal:3000

# ------------------------------------------------------------------------------
# ðŸ” INFISICAL (SOLO PRODUCCIÃ“N)
# ------------------------------------------------------------------------------
# âš ï¸ En desarrollo: NO configurar estas variables
#    Se usa 'infisical run' desde el host (ver package.json -> docker:dev)
# âœ… En producciÃ³n: REQUERIDO
#    El contenedor necesita estas credenciales para conectarse a Infisical
# ------------------------------------------------------------------------------
INFISICAL_CLIENT_ID=your-machine-identity-client-id-here
INFISICAL_CLIENT_SECRET=your-machine-identity-client-secret-here
INFISICAL_ENV=prod
INFISICAL_PROJECT_PATH=/api

# ------------------------------------------------------------------------------
# ðŸ“Š NEW RELIC (OPCIONAL - MONITOREO)
# ------------------------------------------------------------------------------
# En desarrollo: Deshabilitado por defecto (ver docker-compose.override.yml)
# En producciÃ³n: Habilitado si configuras las credenciales
